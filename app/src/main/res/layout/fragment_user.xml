<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_user_fragment_topInformation"
        layout="@layout/user_top_infor"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_fragment_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_user_fragment_topInformation"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_fragment_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_user_fragment_about"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>