<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_project_article_card"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_project_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="8dp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="文章标题文章标题文章标题"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_project_article_preview"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/tv_project_article_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_project_article_title"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/iv_project_article_preview"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="文章内容简介文章内容简介"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_project_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="作者"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_project_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/tv_project_article_author"
            android:text="文章发布时间"
            android:textSize="13sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>