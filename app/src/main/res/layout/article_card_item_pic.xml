<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_daily_mode"
        android:padding="16dp">

        <TextView

            android:id="@+id/rv_article_img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="8dp"
            android:maxWidth="100dp"
            android:maxLines="2"
            android:text="文章标题"
            android:textColor="@color/text_daily_mode"
            android:textSize="15sp"
            />

        <ImageButton
            android:id="@+id/rv_article_imgbtn_save"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@mipmap/collect_normal"
             />

        <ImageView
            android:id="@+id/rv_article_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/rv_article_imgbtn_save"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@color/bg_rv_item_tv"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/rv_article_img_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rv_article_img_desc"
            android:layout_alignBottom="@+id/rv_article_img"
            android:text="2019.08.25"
            android:textColor="@color/text_daily_mode"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rv_article_img_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rv_article_img_date"
            android:layout_below="@+id/rv_article_img_title"
            android:layout_alignStart="@+id/rv_article_img_title"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/rv_article_img"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="@color/text_daily_mode"
            android:textSize="13sp"
            android:text="文章内容简介文章内容简介"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>