<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--导向中recycleView每个子元素的布局设置-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_flow_tags_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_flow_tags_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体系名称"
                android:textColor="@color/black_tag_text"
                android:textSize="20dp" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flow_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>